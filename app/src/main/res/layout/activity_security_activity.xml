<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.waqarahmed.android.vtssystem.security_activity"
    android:background="@drawable/security">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Motion Sensor: Act/Dec"
            android:textColor="#ffffff"
            android:id="@+id/textView5"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/motion_sensor"
            android:textColor="@color/mycolor"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="60dp"
            android:onClick="motion_sensor"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Engine: Release/Kill"
            android:textColor="#ffffff"
            android:id="@+id/textView6"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/engine_state"
            android:textColor="@color/mycolor"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="94dp"
            android:onClick="engine_state"
            />


    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Global Fencing"
            android:textColor="#ffffff"
            android:id="@+id/textView7"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Central Latitude"
            android:textColor="#ffffff"
            android:id="@+id/textView8"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp" />

        <EditText
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/latitude"
            android:layout_marginLeft="100dp"
            android:background="#ffffff"
            android:layout_weight="0.06" />


    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Central Longitude"
        android:textColor="#ffffff"
        android:id="@+id/textView9"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/longitude"
        android:layout_marginLeft="86dp"
        android:background="#ffffff" />


</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Radius"
            android:textColor="#ffffff"
            android:id="@+id/textView10"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp" />

        <EditText
            android:layout_width="83dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/radius"
            android:background="#ffffff"
            android:hint="in km"
            android:textColorHint="@color/mycolor"
            android:layout_marginLeft="174dp"
            android:allowUndo="false" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="send"
        />


</LinearLayout>
